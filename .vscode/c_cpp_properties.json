            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src",       // only my source tree
                "${workspaceFolder}/include"    // if you keep headers separate
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-clang-x64",
            "configurationProvider": "ms-vscode.makefile-tools"
