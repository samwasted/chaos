            "compilerPath": "/usr/bin/watcom/binl/wcc",
            "cStandard": "c99",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-4",
                "-d3",
                "-s",
                "-wx",
                "-ms",
                "-zl",
                "-zq"
            ]
        }
    ],
